<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>stream-badge</Name>
  <Category>Tools:</Category>
  <Beta>False</Beta>
  <Description>
      Small tool that creates a profile image for Twitch streams. Useful for forum signatures.
  </Description>
  <Overview>
      Small tool that creates a profile image for Twitch streams. Useful for forum signatures.
  </Overview>
  <Repository>kieve/stream-badge</Repository>
  <Registry>https://registry.hub.docker.com/u/kieve/stream-badge/</Registry>
  <GitHub>https://github.com/kieve/StreamBadge</GitHub>
  <TemplateURL>https://raw.githubusercontent.com/kieve/docker-templates/master/kieve/stream-badge.xml</TemplateURL>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <BindTime>true</BindTime>
  <TemplateURL/>
  <Project/>
  <Support/>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir/>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Config Name="Appdata" Target="/config" Default="" Mode="rw" Description="Container Path: /config" Type="Path" Display="advanced" Required="false" Mask="false"/>
  <Config Name="PUID" Target="PUID" Default="" Mode="" Description="Container Variable: PUID" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="" Mode="" Description="Container Variable: PGID" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
</Container>
